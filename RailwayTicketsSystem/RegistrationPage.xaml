<Page x:Class="RailwayTicketsSystem.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RailwayTicketsSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage" Background="White">
    <StackPanel>
        <TextBlock Text="Логин" HorizontalAlignment="Center" FontSize="30" Margin="10"/>
        <TextBox x:Name="LoginTextBox" FontSize="25" HorizontalAlignment="Center" Width="400"/>
        <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="30" Margin="10"/>
        <PasswordBox x:Name="PasswordTextBox" FontSize="25" HorizontalAlignment="Center" Width="400"/>
        <TextBlock Text="Подтвердите пароль" HorizontalAlignment="Center" FontSize="30" Margin="10"/>
        <PasswordBox x:Name="ChekPasswordTextBox" FontSize="25" HorizontalAlignment="Center" Width="400"/>
        <Button x:Name="AddUserButton" Click="AddUserButton_Click" Content="Зарегестрироваться" Width="200" Height="50" Margin="30"/>
    </StackPanel>
</Page>

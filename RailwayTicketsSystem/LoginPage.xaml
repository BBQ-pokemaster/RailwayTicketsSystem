<Page x:Class="RailwayTicketsSystem.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RailwayTicketsSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="White">
    <StackPanel>
        <TextBlock Text="Вход в систему" HorizontalAlignment="Center" FontSize="50" Margin="10"/>
        <TextBlock Text="Логин" HorizontalAlignment="Center" FontSize="30" Margin="10"/>
        <TextBox x:Name="LoginTextBox" FontSize="25" HorizontalAlignment="Center" Width="400"/>
        <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="30" Margin="10"/>
        <PasswordBox x:Name="PasswordTextBox" FontSize="25" HorizontalAlignment="Center" Width="400"/>
        <Grid Width="300" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="EnterButton" Content="Войти" Click="EnterButton_Click" Width="150" Height="50"/>
            <Button x:Name="RegistrButton" Content="Зарегистрироваться" Click="RegistrButton_Click" Width="150" Height="50" Grid.Column="1"/>
        </Grid>
    </StackPanel>
</Page>
